<!-- views/loginActivities.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Activities</title>
</head>
<body>
    <h1>Login Activities</h1>
    <table>
        <tr>
            <th>Login Timestamp</th>
            <th>Success</th>
        </tr>
        <% activities.forEach(activity => { %>
            <tr>
                <td><%= activity.loginTimestamp %></td>
                <td><%= activity.success ? 'Yes' : 'No' %></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
